<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <h1>Pokefinder</h1>

  <input type="text" name="pokemon" id="Pokemon">
  <button id="enviar">consultar</button>

  <script>
    const input = document.getElementById('Pokemon');
    const button = document.getElementById('enviar');

    button.addEventListener('click', () => {
      if(input.value !== '0') {
        window.location.href = `/pokemon/${input.value}`
      } 
    });
  </script>
</body>